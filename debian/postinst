PGUSER='temboard'
PGGROUP='temboard'
CONFIGDIR='/etc/temboard-ui'
CONFIGDIRSSL=$CONFIGDIR'/ssl'
CONFIGFILE=$CONFIGDIR'/temboard-ui.conf'
RUNDIR='/var/run/temboard-ui'
LOGDIR='/var/log/temboard-ui'
LOGFILE='/var/log/temboard-ui/temboard-ui.log'

[ $(/usr/bin/getent group $PGGROUP) ] || /usr/sbin/groupadd $PGGROUP
if ! /usr/bin/id -u $PGUSER > /dev/null 2>&1; then
        /usr/sbin/adduser --system --no-create-home --disabled-password --disabled-login --ingroup $PGGROUP $PGUSER > /dev/null 2>&1
fi

if ! [ -d $CONFIGDIR ]; then
        /bin/mkdir $CONFIGDIR
fi

if ! [ -d $CONFIGDIRSSL ]; then
        /bin/mkdir $CONFIGDIRSSL
fi

if ! [ -d $RUNDIR ]; then
       /bin/mkdir $RUNDIR
fi

if ! [ -f $CONFIGFILE ]; then
	/usr/bin/install -m 0600 /usr/share/temboard-ui/temboard-ui.conf.sample $CONFIGFILE
fi

if ! [ -f $CONFIGDIRSSL/temboard-ui_CHANGEME.pem ]; then
	/usr/bin/install -m 0600 /usr/share/temboard-ui/temboard-ui_CHANGEME.pem $CONFIGDIRSSL/temboard-ui_CHANGEME.pem
fi

if ! [ -f $CONFIGDIRSSL/temboard-ui_CHANGEME.key ]; then
	/usr/bin/install -m 0600 /usr/share/temboard-ui/temboard-ui_CHANGEME.key $CONFIGDIRSSL/temboard-ui_CHANGEME.key
fi

if ! [ -f $CONFIGDIRSSL/temboard-ui_ca_certs_CHANGEME.pem ]; then
	/usr/bin/install -m 0600 /usr/share/temboard-ui/temboard-ui_ca_certs_CHANGEME.pem $CONFIGDIRSSL/temboard-ui_ca_certs_CHANGEME.pem
fi

if ! [ -d $LOGDIR ]; then
        /bin/mkdir $LOGDIR
fi

if ! [ -f $LOGFILE ]; then
        /usr/bin/touch $LOGFILE
fi

/bin/chown $PGUSER.$PGGROUP $CONFIGDIRSSL/temboard-ui_ca_certs_CHANGEME.pem
/bin/chown $PGUSER.$PGGROUP $CONFIGDIRSSL/temboard-ui_CHANGEME.key
/bin/chown $PGUSER.$PGGROUP $CONFIGDIRSSL/temboard-ui_CHANGEME.pem
/bin/chown $PGUSER.$PGGROUP $CONFIGFILE
/bin/chown -R $PGUSER.$PGGROUP $LOGDIR
/bin/chown -R $PGUSER.$PGGROUP $RUNDIR
/bin/chown $PGUSER.$PGGROUP $LOGFILE
